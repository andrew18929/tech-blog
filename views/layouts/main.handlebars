<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tech Blog</title>
    <link rel="stylesheet" href="/public/css/style.css" />
  </head>

  <body>
    <div class="flex-column justify-space-around">
      <header class="display-flex justify-space-around align-center p-2">
        <h1 class="title">Tech Blog</h1>
        <nav>
          <a class="link" href="/">Home</a>
          <a class="link" href="/dashboard">Dashboard</a>
          <!-- render login or logout links if user is logged in -->
          {{#if loggedIn}}
            <a class="link" href="/" id="logout">Logout</a>
          {{else}}
            <a class="link" href="/" id="login">Login</a>
          {{/if}}
        </nav>
      </header>

      <main class="container container-fluid mt-5">
        {{{body}}}
      </main>
    </div>

    {{#if loggedIn}}
      <script src="/public/js/logout.js"></script>
    {{/if}}

  </body>
</html>